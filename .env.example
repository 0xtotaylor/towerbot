# ---------- Azure / OpenAI (Choose ONE) ----------
# Use Azure OpenAI OR OpenAI API (not both)
AZURE_OPENAI_API_KEY=           # Azure OpenAI service API key (if using Azure)
AZURE_OPENAI_ENDPOINT=          # Base URL, e.g. https://<resource>.openai.azure.com/ (if using Azure)
OPENAI_API_KEY=                 # OpenAI service API key (if using OpenAI)

# ---------- BerlinHouse (Optional) ----------
BERLINHOUSE_API_KEY=            # (Optional) BerlinHouse API key - required for community and supply request features
BERLINHOUSE_BASE_URL=           # (Optional) BerlinHouse API URL - required for community and supply request features

# ---------- Bot / Chat Platform ----------
ALLOWED_GROUP_IDS=              # (Optional): Allow list of group/channel IDs to restrict bot access
BOT_TOKEN=                      # Token for your chat/voice bot (e.g. Discord, Slack)
GROUP_ID=                       # Allowed group/channel ID to restrict bot access

# ---------- Default App Settings ----------
MODEL=gpt-5-mini                       # Primary LLM name or deployment ID
EMBEDDING_MODEL=text-embedding-3-small # Embedding model name or deployment ID
REASONING_MODEL=gpt-5                  # Reasoning model name or deployment ID
RERANKER_MODEL=gpt-5-nano              # Reâ€‘ranking model identifier (1st instance)

# ---------- LangSmith (LangChain tracing & analytics) ----------
LANGSMITH_API_KEY=              # LangSmith API key
LANGSMITH_PROJECT=              # Project name/slug in LangSmith
LANGSMITH_TRACING=true          # true / false to enable LangSmith tracing

# ---------- Neo4j ----------
NEO4J_URI=                      # Bolt URI, e.g. bolt+s://<host>:7687
NEO4J_USER=                     # Neo4j username
NEO4J_PASSWORD=                 # Neo4j password
DEFAULT_DATABASE=               # Name of the default DB the app should use

# ---------- Notion (Optional) ----------
NOTION_API_KEY=                 # (Optional) Integration token for Notion API access

# ---------- Postgres ----------
POSTGRES_CONN_STRING=           # Full Postgres connection URI

# ---------- Soulink (feature flag / admin) ----------
SOULINK_ADMIN_ID=               # User ID with admin privileges for Soulink
SOULINK_ENABLED=false           # true / false to toggle Soulink features

# ---------- Webhooks & Callbacks ----------
WEBHOOK_URL=                    # For local development use ngrok: https://<id>.ngrok-free.app